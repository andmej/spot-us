%tr.pledge
  %td.tip
    - if pledge.tip.featured_image?
      = link_to image_tag(pledge.tip.featured_image.url(:thumb)), tip_url(pledge.tip)
    TIP:
    = link_to h(pledge.tip.headline), tip_url(pledge.tip)
  %td.pledged= pledge.created_at.to_s(:date)
  %td.pledge
    = render :partial => 'inline_pledge_form', :locals => {:pledge => pledge}
  %td.status
    %div{:id =>"pledge_#{pledge.id}_status"}
      = number_to_currency(pledge.tip.total_amount_pledged)
      Pledged
  %td.actions
    .action= link_to "Remove", pledge_url(pledge), :method => :delete, :confirm => "EstÃ¡s seguro de que quieres eliminar tu compromiso de #{number_to_currency(pledge.amount)}?"

