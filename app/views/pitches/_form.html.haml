- form_for(@pitch, :html => { :multipart => true }) do |f|
  .box_yellow.create_a_pitch_form
    .yellow-spacer-negative
    .row
      = render :partial => 'shared/network', :locals => {:f => f, :instance => @pitch}
    .row
      = f.label     :headline, "El título de tu artículo <br /><span class='small quieter'>Required</span>"
      = f.text_area :headline, :rows => 2
      = text_field_tag 'pitch[blog_url]', '', :class => 'highlight_required', :id => 'pitch_blog_url'
    .yellow-spacer-negative
    .row
      = f.label :short_description, "¿Por qué le puede importar a alguien? Vende tu historia <br /><span class='small quieter'>Obligatorio. <br /><br /> Explica sobre que va a tratar tu reportaje.</span>"
      = fckeditor_textarea("pitch", "short_description", :toolbarSet => 'Spotus', :width => '67%', :height => '200px')
    .row
      .form_hint.small
        500 Characters Remain
    .yellow-spacer-negative
    .row
      %label{:for => ""}
        Topics
    .row
      = topic_check_boxes(@pitch)
    .yellow-spacer-negative
    .row
      = f.label :extended_description, "¿Cómo puede ayudar tu reportaje?"
      = fckeditor_textarea("pitch", "extended_description", :toolbarSet => 'Spotus', :width => '100%', :height => '200px')
      .yellow-spacer-negative
      .row
      = f.label :skills, "¿Tienes la habilidad y recursos necesarios para llevar a cabo esta investigación? <br /><span class='small quieter'>Justifica porque tu habilidad como periodista vale la cantidad que estás pidiendo.</span>"
      = f.text_area :skills, :rows => 3
    .yellow-spacer-negative
    .row
      = f.label :keyword, "Palabras clave <br /><span class='small quieter'> Opcional.  Las palabras clave deben ir separadas por comas, por ejemplo: reclicar, basura SUVs.&quot;</span>"
      = f.text_area :keywords, :rows => 3
    .yellow-spacer-negative
    .row
      %label{:for => 'requested_amount'}
        Requested Amount
        %br/
        %span.small.quieter
          == #{link_to "Suggested pricings for work", page_path("reporter_agreement")},
      = f.text_field :requested_amount, :maxlength => 15, :size => 15
    .yellow-spacer-negative
    .row
      = f.label :delivery_description, "Obligatorio:<br />¿Qué será entregado?<br />¿Cuánto tiempo llevará? <br /> ¿Cuántas horas de trabajo?<br /><span class='small quieter'>Explica en detalle en qué consistirá tu trabajo para justificar lo que pides</span>"
      .form_hint.delivered
        = f.label     :deliver_text,  "Texto", :class => "small"
        = f.check_box :deliver_text
        = f.label     :deliver_audio, "Audio", :class => "small"
        = f.check_box :deliver_audio
        = f.label     :deliver_video, "Video", :class => "small"
        = f.check_box :deliver_video
        = f.label     :deliver_photo, "Fotos", :class => "small"
        = f.check_box :deliver_photo
        = f.text_area :delivery_description
      %br
    .yellow-spacer-negative
    .row
      %label{:for => ""} 
        Add Media
    .yellow-spacer-negative-blank
    .row.media
      %label.small{:for => ""}
        Obligatorio: Sube una foto que ilustre el artículo
        %br
        %span.quieter JPEG, PNG and GIF's menos de 5 MB.
      = f.file_field :featured_image
    .yellow-spacer-negative-blank
    .row.media
      = f.label :featured_image_caption, "Obligatorio: Adjunta un pie de foto" + "<br/><span class='small quieter'>200 letras máx.</span>", :class => "small"
      = f.text_area :featured_image_caption, :rows => 2
    .yellow-spacer-negative-blank
    .row.media
      = f.label :video_embed, "Inserta un Video" + "<br/><span class='quieter small'>Inserta aquí la url de tu video con el código de enlace. <br/> Solo Vimeo y Youtube.</span>", :class => "small"
      = f.text_area :video_embed, :rows => 4
    .yellow-spacer-negative-blank
    .row.media
      = f.label :widget_embed, "Inserta un Widget" + "<br/><span class='quieter small'>Inserta aquí la url del widget con el código de enlace.</span>", :class => "small"
      = f.text_area :widget_embed, :rows => 4
    .yellow-spacer-negative
    .row
      = f.label :expiration_date, "Fecha límite <br /><span class='quieter small'>(Optional)</span>"
      = f.date_select :expiration_date
    .yellow-spacer-negative
    .free
      .float_left
      = f.check_box :contract_agreement
      = f.label :contract_agreement, %Q(Estoy de acuerdo con el #{link_to "Contrato de reportero", page_path('reporter_contract'), :class => "quieter"} (Por favor, leelo).)
      .clear

  .double_content_border

  .float-right
    - if @pitch.new_record?
      = image_submit_tag image_path('create_a_pitch.png'), :alt => 'Propón un artículo'
    - else
      = image_submit_tag image_path('save.png')
      = link_to image_tag('cancel.png', :alt => 'Cancelar'), root_url

