- @title = "Periodismoalacarta.com - Sugiere una investigación: #{h @tip.headline}"

.block-spacer
#equalize
  .span-455.box_white
    %h2.headline
      TIP:
      = h @tip.headline
    .double_content_border
    = render :partial => 'news_items/user', :locals => { :news_item => @tip }
    %p 
      = render :partial => 'news_items/featured_image', :locals => {:news_item => @tip}
      .alt-spotus= @tip.short_description
    - unless @tip.video_embed.blank?
      .block-spacer-negative
      %h3 Video
      .double_content_border
      = @tip.video_embed
    .block-spacer-negative
    %h3 Comentarios
    .double_content_border
    .comments
      %p= "No hay comentarios todavía, se el primero!" if @tip.comments.empty?
      = render :partial => 'shared/comment', :collection => @tip.comments
    %h3 Haz un comentario
    .double_content_border
    - form_for [@tip, Comment.new], :html => {:class => 'auth'} do |f|
      = render :partial => 'comments/form', :locals => {:f => f}
  .span-220.column_v.box_white
    .centered= render :partial => "pledges/button", :locals => { :news_item => @tip }
    .block-spacer-negative
    %h3 Artículos relacionados
    .double_content_border
    = render :partial => "related_pitches", :object => @tip.pitches
    - if current_user && current_user.reporter? && current_user.pitches.any?
      .double_content_border
      Asocia esta sugerencia con un artículo
      %br/
      - form_for Affiliation.new do |f|
        = f.hidden_field :tip_id, :value => @tip.id
        = f.select :pitch_id, available_pitches_for(@tip)
        = f.submit "Attach"
    .block-spacer-negative
    %h3 Palabras clave
    .double_content_border
    %p= h @tip.keywords
    - if @tip.editable_by?(current_user)
      .block-spacer-negative
      .centered= link_to image_tag("edit_this_tip.png"), edit_tip_path(@tip)

  .span-160.box_white
    = render :partial => "supporters", :locals => {:news_item => @tip}
.clear
.block-spacer

