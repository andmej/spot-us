- form_for(@story, :html => { :multipart => true }) do |f|
  .box_yellow.create_a_pitch_form
    .yellow-spacer-negative
    .row
      = f.label     :headline, "El titular de tu historia <br /><span class='small quieter'>Obligatorio</span>"
      = f.text_area :headline, :rows => 2
    .yellow-spacer-negative
    .row
      = f.label :extended_description, "Este es el cuerpo de tu historia."
      = fckeditor_textarea("story", "extended_description", :toolbarSet => 'Spotus', :width => '67%', :height => '400px')
    .row
      .form_hint.small
        500 Caractéres restantes
    - if current_user.admin?
      .row
        = f.label :external_links
        = fckeditor_textarea("story", "external_links", :toolbarSet => 'spotus', :width => '67%', :height => '200px')

    - if current_user.admin?
      .yellow-spacer-negative
      .row
        = f.label :license
        = fckeditor_textarea("story", "license", :toolbarSet => 'spotus', :width => '67%', :height => '200px')
    .yellow-spacer-negative
    .row
      %label{:for => ""} 
        Contenidos extra
    .yellow-spacer-negative-blank
    .row.media
      %label.small{:for => ""}
        Obligatorio: Subir una imagen
        %br
        %span.quieter JPEG, PNG and GIF's menos de 5 MB.
      = f.file_field :featured_image
    .yellow-spacer-negative-blank
    .row.media
      = f.label :featured_image_caption, "Obligatorio: Añade un pie de foto a la imágen" + "<br/><span class='small quieter'>200 Carácteres Max</span>", :class => "small"
      = f.text_area :featured_image_caption, :rows => 2
    .yellow-spacer-negative-blank
    .row.media
      = f.label :video_embed, "Insertar un video" + "<br/><span class='quieter small'>Pon aquí el código de tu video enlazado. <br/> Solo aceptamos videos de Vimeo o YouTube por ahora.</span>", :class => "small"
      = f.text_area :video_embed, :rows => 4
      .clear

  .double_content_border

  .float-right
    = image_submit_tag image_path('save.png')

