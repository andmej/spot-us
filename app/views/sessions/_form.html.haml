.row
  %label Tu e-mail
  %div{:class => session_field_class_name }
    = text_field_tag "email", nil, :class=>"text"
.block-padding
.row
  %label Tu contraseña
  %div{:class => session_field_class_name }
    = password_field_tag "password", nil, :class=>"text"
.row
  = check_box_tag 'remember_me', '1'
  %label{:for => 'remember_me'} Recordarme
%p
  = link_to "¿Olvidaste tu contraseña?", password_user_path, :class => "forgot_password"
  %br
  = link_to "Reenviar el email de activación", activation_email_user_path, :class => "forgot_password"

